<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"

            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/background_gradient" />

    </LinearLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="112dp"
        android:layout_height="134dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_mrmilk_icon" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="158dp"
        android:layout_height="51dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/imageView"
        android:layout_marginEnd="108dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/signpainterhousescriptsemibold"
        android:text="Mr. Milk"
        android:textColor="@color/colorTitle"
        android:textSize="51dp"
        />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:layout_marginTop="6dp"

        android:layout_below="@+id/textView"
        android:fontFamily="@font/proxima_nova_reg"
        android:gravity="center"
        android:text="Milk Delivery at your Doorstep!"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorTitle"
        android:textSize="11dp" />

    <LinearLayout
        android:id="@+id/phone_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_signup_login_frame"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="157dp"
            android:layout_height="17dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="199dp"

            android:fontFamily="@font/proxima_nova_bold"
            android:text="Welcome to Mr. Milk!"
            android:textColor="@color/colorTitle"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/proxima_nova_reg"
            android:text="Please provide us with few more details about yourself."
            android:textSize="10dp" />


        <LinearLayout
            android:id="@+id/phone_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="30dp"
                android:ems="10"
                android:fontFamily="@font/proxima_nova_reg"
                android:hint="First Name"
                android:inputType="phone"
                android:maxLength="10"
                android:textColor="@color/colorTextHint"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:layout_marginStart="42dp"
                android:fontFamily="@font/proxima_nova_reg"
                android:text="Cannot be Blank"
                android:textColor="@color/colorErrorText"
                android:textSize="9dp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="30dp"
                android:ems="10"
                android:fontFamily="@font/proxima_nova_reg"
                android:hint="Last Name"
                android:inputType="phone"
                android:maxLength="10"
                android:textColor="@color/colorTextHint"
                android:textSize="14dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:layout_marginStart="42dp"
                android:fontFamily="@font/proxima_nova_reg"
                android:text="Cannot be Blank"
                android:textColor="@color/colorErrorText"
                android:textSize="9dp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="30dp"
                android:ems="10"
                android:fontFamily="@font/proxima_nova_reg"
                android:hint="Email Id"
                android:inputType="phone"
                android:maxLength="10"
                android:textColor="@color/colorTextHint"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:layout_marginStart="42dp"
                android:fontFamily="@font/proxima_nova_reg"
                android:text="Cannot be Blank"
                android:textColor="@color/colorErrorText"
                android:textSize="9dp"
                android:visibility="invisible" />


        </LinearLayout>

<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="horizontal">-->


<!--        </LinearLayout>-->



        <ImageButton
            android:id="@+id/submitPhone_Btn"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="2dp"
            android:background="@drawable/full_circle"
            android:src="@drawable/ic_baseline_arrow_forward_24" />


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_below="@+id/phone_linear_layout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/proxima_nova_bold"
        android:gravity="center"
        android:text="2020 Mr. Milk. All Rights Reserved"
        android:textColor="@color/colorPrimary"
        android:textSize="13dp" />
</RelativeLayout>

